---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts
  .filter(({ data }) => data.featured)
  .sort((a, b) => (a.data.featuredOrder ?? 999) - (b.data.featuredOrder ?? 999));

const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />

  <main id="main-content" data-layout="index" class="app-layout">
    <!-- HERO -->
    <section id="hero" class:list={["pt-8 pb-6", "border-b border-border"]}>
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Yachenâ€™s Notes
      </h1>

      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
        />
        <span class="sr-only">RSS Feed</span>
      </a>

      <p>
        Notes on thinking, investing, business, and learning.
        <br /><br />
        Business world was never part of my original plan.
        But when it appeared in my life, I chose to create opportunity for learning.
        <br /><br />
        Can I really do this? I donâ€™t know. But if I never try, the probability is always zero.
        <br /><br />
        So screw the odds. I know I wonâ€™t regret trying.
        <br /><br />
        Câ€™est parti! ðŸ˜Ž
      </p>
      

      

      {
        SOCIALS.length > 0 && (
          <div class="mt-4 flex max-sm:flex-col sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <!-- FEATURED PROJECTS (BIG CARDS) -->
    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-12 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-3xl font-semibold tracking-wide">
            Featured Projects
          </h2>
          <p class="mt-2 max-w-2xl opacity-80">
            A few selected projects and posts worth reading.
          </p>

          <section class="projects-grid mt-8">
            {featuredPosts.map((post) => (
              <ProjectCard post={post} />
            ))}
          </section>
        </section>
      )
    }

    <!-- RECENT POSTS (KEEP ORIGINAL STYLE) -->
    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const el = document.querySelector("#main-content") as HTMLElement | null;
    const indexLayout = el?.dataset?.layout;

    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>


<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 32px;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
